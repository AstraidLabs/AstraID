{
  "ConnectionStrings": {
    "Default": "Server=sql;Database=AstraID;User Id=astraid;Password=CHANGE_ME;TrustServerCertificate=True;"
  },
  "AstraId": {
    "Issuer": "https://id.example.com",
    "AllowedCors": [ "https://app.example.com" ],
    "RateLimit": { "Rps": 10, "Burst": 20 },
    "AutoMigrate": false,
    "RunSeed": false
  },
  "Auth": {
    "TokenLifetimes": { "AccessMinutes": 60, "IdentityMinutes": 15, "RefreshDays": 14 },
    "Certificates": {
      "UseDevelopmentCertificates": false,
      "Signing": [ { "Path": "/certs/astraid-signing.pfx", "Password": "CHANGE_ME" } ],
      "Encryption": [ { "Path": "/certs/astraid-encryption.pfx", "Password": "CHANGE_ME" } ]
    },
    "Introspection": { "ClientId": "admin-cli", "ClientSecret": "CHANGE_ME" }
  },
  "Serilog": { "MinimumLevel": "Warning", "WriteTo": [ { "Name": "Console" } ] }
}
